{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>\n" | safeHTML -}}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Data.Pages -}}
    {{- $noindex := eq .Params.robotsNoIndex true -}}

    {{- /* Exclude thin term pages (e.g., 0â€“1 indexable posts) */ -}}
    {{- if and (not $noindex) (eq .Kind "term") -}}
      {{- $indexablePages := where .RegularPages "Params.robotsNoIndex" "ne" true -}}
      {{- if le (len $indexablePages) 1 -}}
        {{- $noindex = true -}}
      {{- end -}}
    {{- end -}}

    {{- if or $noindex .Sitemap.Disable -}}
      {{- continue -}}
    {{- end -}}

    <url>
      <loc>{{ .Permalink }}</loc>
      {{- if not .Lastmod.IsZero }}
      <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
      {{- end }}
      {{- with .Sitemap.ChangeFreq }}
      <changefreq>{{ . }}</changefreq>
      {{- end }}
      {{- if ge .Sitemap.Priority 0.0 }}
      <priority>{{ .Sitemap.Priority }}</priority>
      {{- end }}
      {{- if .IsTranslated -}}
        {{- range .AllTranslations -}}
      <xhtml:link rel="alternate" hreflang="{{ .Language.Lang }}" href="{{ .Permalink }}" />
        {{- end -}}
      {{- end }}
    </url>
  {{- end -}}
</urlset>
